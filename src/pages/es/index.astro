---
import i18next, { t, changeLanguage } from "i18next";
import "styles/globals.css";

changeLanguage("es");
---

<!DOCTYPE html>
<html lang={i18next.language}>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="description" content={t("site.description")} />
        <meta
            name="keywords"
            content="developer, full stack developer, desarrollador, front end, typescript, react"
        />
        <meta name="author" content="Maximiliano Arbelais" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{t("site.title")}</title>
    </head>
    <body
        class="m-auto w-full background font-Mulish flex flex-col items-center justify-center transition-all"
    >
        <main
            class="container wrapper w-full h-screen flex items-center justify-center"
        >
            <div class="relative card w-5/6 md:w-4/6 h-4/6 rounded-2xl">
                <div
                    class="glow md:px-10 rounded-2xl shadow-2xl flex flex-col items-center justify-center backdrop-blur-sm bg-white/10 overflow-hidden"
                >
                    <div
                        class="flex flex-col items-center justify-center z-[-1]"
                    >
                        <div
                            class="flex items-center justify-center text-xl md:text-2xl lg:text-5xl 2xl:text-6xl"
                        >
                            <h1
                                class="main-title tracking-tight font-extrabold font-Montserrat bg-clip bg-gradient-to-b from-gray-600 via-gray-800 to-black bg-clip-text text-transparent"
                            >
                                arbelaism
                            </h1>
                            <span
                                class="hide bg-clip tracking-tight font-extrabold font-Montserrat bg-gradient-to-b from-gray-600 via-gray-800 to-black bg-clip-text text-transparent"
                                >aximiliano</span
                            >
                        </div>

                        <h2
                            class="show bg-clip text-transparent text-xs md:text-lg lg:text-xl font-Mulish bg-gradient-to-b from-gray-600 via-gray-800 to-black bg-clip-text drop-shadow"
                        >
                            {t("site.headline")}
                        </h2>
                    </div>
                    <div class="absolute bottom-8 show-delay">
                        <a href="/home">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke-width="1.5"
                                stroke="currentColor"
                                class="w-6 h-6 md:w-8 md:h-8 xl:w-12 xl:h-12 2xl:w-16 2xl:h-16 text-gray-900 hover:text-black hover:scale-95 transition-all"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M12.75 15l3-3m0 0l-3-3m3 3h-7.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                                ></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </main>
    </body>
</html>

<style>
    .background {
        background-color: rgb(82, 82, 91);
        background-image: radial-gradient(
                at 69% 65%,
                rgb(99, 102, 241) 0,
                transparent 14%
            ),
            radial-gradient(at 31% 48%, rgb(110, 231, 183) 0, transparent 48%),
            radial-gradient(at 4% 25%, rgb(110, 231, 183) 0, transparent 39%),
            radial-gradient(at 44% 88%, rgb(190, 18, 60) 0, transparent 28%),
            radial-gradient(at 96% 55%, rgb(168, 85, 247) 0, transparent 50%),
            radial-gradient(at 21% 35%, rgb(249, 168, 212) 0, transparent 85%);
    }

    .bg-clip {
        -webkit-background-clip: text;
    }

    .wrapper {
        -webkit-perspective: 1500px;
        perspective: 1500px;
    }

    .card {
        -webkit-transition-duration: 300ms;
        -o-transition-duration: 300ms;
        transition-duration: 300ms;
        -webkit-transition-property: -webkit-transform, -webkit-box-shadow;
        transition-property: -webkit-transform, -webkit-box-shadow;
        -o-transition-property: transform, box-shadow;
        transition-property: transform, box-shadow;
        transition-property: transform, box-shadow, -webkit-transform,
            -webkit-box-shadow;
        -webkit-transition-timing-function: ease-out;
        -o-transition-timing-function: ease-out;
        transition-timing-function: ease-out;
        -webkit-transform: rotate3d(0);
        transform: rotate3d(0);
    }

    .card:hover {
        -webkit-transition-duration: 150ms;
        -o-transition-duration: 150ms;
        transition-duration: 150ms;
        -webkit-box-shadow: 0 5px 20px 5px #00000044;
        box-shadow: 0 5px 20px 5px #00000044;
    }

    .card .glow {
        position: absolute;
        width: 100%;
        height: 100%;
        left: 0;
        top: 0;

        background-image: -o-radial-gradient(
            50% -20%,
            circle,
            #0141ff55,
            #0000000f
        );

        background-image: radial-gradient(
            circle at 50% -20%,
            #0141ff55,
            #0000000f
        );
    }

    .main-title {
        -webkit-animation: fadeInAnimation 0.7s ease, center 1s ease 2000ms;
        animation: fadeInAnimation 0.7s ease, center 1s ease 2000ms;
        -webkit-animation-iteration-count: 1;
        animation-iteration-count: 1;
        -webkit-animation-fill-mode: forwards;
        animation-fill-mode: forwards;
    }

    .show {
        -webkit-animation: fadeInAnimation 0.7s ease;
        animation: fadeInAnimation 0.7s ease;
        -webkit-animation-iteration-count: 1;
        animation-iteration-count: 1;
        -webkit-animation-fill-mode: forwards;
        animation-fill-mode: forwards;
    }

    .show-delay {
        opacity: 0;
        -webkit-animation: fadeInAnimation 0.5s ease 3000ms;
        animation: fadeInAnimation 0.5s ease 3000ms;
        -webkit-animation-iteration-count: 1;
        animation-iteration-count: 1;
        -webkit-animation-fill-mode: forwards;
        animation-fill-mode: forwards;
    }

    .hide {
        opacity: 0;
        animation: fadeInAnimation 0.5s ease, fadeOut 0.7s ease 1500ms;
        -webkit-animation: fadeInAnimation 0.5s ease, fadeOut 0.7s ease 1500ms;

        animation-iteration-count: 1;
        -webkit-animation-iteration-count: 1;

        animation-fill-mode: forwards;
        -webkit-animation-fill-mode: forwards;
    }

    @keyframes fadeInAnimation {
        0% {
            opacity: 0;
        }
        100% {
            opacity: 1;
        }
    }

    @-webkit-keyframes fadeInAnimation {
        0% {
            opacity: 0;
        }
        100% {
            opacity: 1;
        }
    }

    @-webkit-keyframes center {
        0% {
            -webkit-transform: translateX(0%) scale(1, 1);
            transform: translateX(0%) scale(1, 1);
        }
        50% {
            -webkit-transform: translateX(30%) scale(1, 1);
            transform: translateX(30%) scale(1, 1);
        }
        100% {
            -webkit-transform: translateX(30%) scale(1.25, 1.25);
            transform: translateX(30%) scale(1.25, 1.25);
        }
    }

    @keyframes center {
        0% {
            -webkit-transform: translateX(0%) scale(1, 1);
            transform: translateX(0%) scale(1, 1);
        }
        50% {
            -webkit-transform: translateX(50%) scale(1, 1);
            transform: translateX(50%) scale(1, 1);
        }
        100% {
            -webkit-transform: translateX(50%) scale(1.15, 1.15);
            transform: translateX(50%) scale(1.15, 1.15);
        }
    }

    @-webkit-keyframes fadeOut {
        0% {
            opacity: 1;
        }
        100% {
            opacity: 0;
        }
    }

    @keyframes fadeOut {
        0% {
            opacity: 1;
        }
        100% {
            opacity: 0;
        }
    }
</style>

<script>
    import { mouseAnimation } from "utils/mouseAnimation";
    mouseAnimation();
</script>
