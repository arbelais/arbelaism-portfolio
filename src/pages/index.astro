---
import Layout from "layouts/Layout.astro";
---

<Layout title="My Portfolio - arbelaism">
    <main
        class="wrapper background w-full h-screen flex items-center justify-center"
    >
        <div class="relative card w-5/6 md:w-4/6 h-4/6 rounded-2xl">
            <div
                class="glow md:px-10 rounded-2xl shadow-2xl flex flex-col items-center justify-center backdrop-blur-sm bg-white/10 overflow-hidden"
            >
                <div class="flex flex-col items-center justify-center z-[-1]">
                    <h1
                        class="main-title flex text-transparent text-4xl md:text-5xl lg:text-6xl 2xl:text-7xl tracking-tight font-extrabold font-Montserrat bg-gradient-to-b from-gray-600 via-gray-800 to-black bg-clip-text"
                    >
                        arbelaism<span
                            class="hide text-transparent text-4xl md:text-5xl lg:text-6xl 2xl:text-7xl tracking-tight font-extrabold font-Montserrat bg-gradient-to-b from-gray-600 via-gray-800 to-black bg-clip-text"
                        >
                            aximiliano
                        </span>
                    </h1>
                    <h2
                        class="show text-transparent text-lg md:text-xl lg:text-2xl 2xl:text-4xl font-Mulish bg-gradient-to-b from-gray-600 via-gray-800 to-black bg-clip-text drop-shadow"
                    >
                        Full Stack Developer.
                    </h2>
                </div>
                <div class="absolute bottom-8 show-delay">
                    <a href="/home">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            class="w-12 h-12 2xl:w-16 2xl:h-16 text-gray-900 hover:text-black hover:scale-95 transition-all"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M12.75 15l3-3m0 0l-3-3m3 3h-7.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                            ></path>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </main>
</Layout>

<style>
    h1,
    h2,
    span {
        -webkit-background-clip: text;
    }

    .wrapper {
        -webkit-perspective: 1500px;
        perspective: 1500px;
    }

    .card {
        -webkit-transition-duration: 300ms;
        -o-transition-duration: 300ms;
        transition-duration: 300ms;
        -webkit-transition-property: -webkit-transform, -webkit-box-shadow;
        transition-property: -webkit-transform, -webkit-box-shadow;
        -o-transition-property: transform, box-shadow;
        transition-property: transform, box-shadow;
        transition-property: transform, box-shadow, -webkit-transform,
            -webkit-box-shadow;
        -webkit-transition-timing-function: ease-out;
        -o-transition-timing-function: ease-out;
        transition-timing-function: ease-out;
        -webkit-transform: rotate3d(0);
        transform: rotate3d(0);
    }

    .card:hover {
        -webkit-transition-duration: 150ms;
        -o-transition-duration: 150ms;
        transition-duration: 150ms;
        -webkit-box-shadow: 0 5px 20px 5px #00000044;
        box-shadow: 0 5px 20px 5px #00000044;
    }

    .card .glow {
        position: absolute;
        width: 100%;
        height: 100%;
        left: 0;
        top: 0;

        background-image: -o-radial-gradient(
            50% -20%,
            circle,
            #0141ff55,
            #0000000f
        );

        background-image: radial-gradient(
            circle at 50% -20%,
            #0141ff55,
            #0000000f
        );
    }

    .main-title {
        -webkit-animation: fadeInAnimation 0.7s ease, center 1s ease 2000ms;
        animation: fadeInAnimation 0.7s ease, center 1s ease 2000ms;
        -webkit-animation-iteration-count: 1;
        animation-iteration-count: 1;
        -webkit-animation-fill-mode: forwards;
        animation-fill-mode: forwards;
    }

    .show {
        -webkit-animation: fadeInAnimation 0.7s ease;
        animation: fadeInAnimation 0.7s ease;
        -webkit-animation-iteration-count: 1;
        animation-iteration-count: 1;
        -webkit-animation-fill-mode: forwards;
        animation-fill-mode: forwards;
    }

    .show-delay {
        opacity: 0;
        -webkit-animation: fadeInAnimation 0.5s ease 3000ms;
        animation: fadeInAnimation 0.5s ease 3000ms;
        -webkit-animation-iteration-count: 1;
        animation-iteration-count: 1;
        -webkit-animation-fill-mode: forwards;
        animation-fill-mode: forwards;
    }

    .hide {
        opacity: 0;
        animation: fadeInAnimation 0.5s ease, fadeOut 0.7s ease 1500ms;
        -webkit-animation: fadeInAnimation 0.5s ease, fadeOut 0.7s ease 1500ms;

        animation-iteration-count: 1;
        -webkit-animation-iteration-count: 1;

        animation-fill-mode: forwards;
        -webkit-animation-fill-mode: forwards;
    }

    @keyframes fadeInAnimation {
        0% {
            opacity: 0;
        }
        100% {
            opacity: 1;
        }
    }

    @-webkit-keyframes fadeInAnimation {
        0% {
            opacity: 0;
        }
        100% {
            opacity: 1;
        }
    }

    @-webkit-keyframes center {
        0% {
            -webkit-transform: translateX(0%);
            transform: translateX(0%);
        }
        100% {
            -webkit-transform: translateX(25%);
            transform: translateX(25%);
        }
    }

    @keyframes center {
        0% {
            -webkit-transform: translateX(0%);
            transform: translateX(0%);
        }
        100% {
            -webkit-transform: translateX(25%);
            transform: translateX(25%);
        }
    }

    @-webkit-keyframes fadeOut {
        0% {
            opacity: 1;
        }
        100% {
            opacity: 0;
        }
    }

    @keyframes fadeOut {
        0% {
            opacity: 1;
        }
        100% {
            opacity: 0;
        }
    }
</style>

<script lang="type">
    function another() {
        const card = document.querySelector(".card");
        let bounds;

        function rotateToMouse(e) {
            const mouseX = e.clientX;
            const mouseY = e.clientY;
            const leftX = mouseX - bounds.x;
            const topY = mouseY - bounds.y;
            const center = {
                x: leftX - bounds.width / 2,
                y: topY - bounds.height / 2,
            };
            const distance = Math.sqrt(center.x ** 2 + center.y ** 2);

            card.style.transform = `
                scale3d(1.01, 1.01, 1.01)
                rotate3d(
                  ${center.y / 100},
                  ${-center.x / 100},
                  0,
                  ${Math.log(distance) * 2}deg
                )
              `;

            card.querySelector(".glow").style.backgroundImage = `
                radial-gradient(
                  circle at
                  ${center.x * 2 + bounds.width / 2}px
                  ${center.y * 2 + bounds.height / 2}px,
                  #0141ff55,
                  #0000000f
                )
              `;
        }

        card.addEventListener("mouseenter", () => {
            bounds = card.getBoundingClientRect();
            document.addEventListener("mousemove", rotateToMouse);
        });

        card.addEventListener("mouseleave", () => {
            document.removeEventListener("mousemove", rotateToMouse);
            card.style.transform = "";
            card.style.background = "";
        });
    }

    another();
</script>
