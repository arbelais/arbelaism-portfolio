---
import { Sprite } from "astro-icon";
import Layout from "layouts/Layout.astro";
---

<Layout title="My Portfolio - arbelaism">
    <main
        id="wrapper"
        class="w-full h-screen flex items-center justify-center relative z-20"
    >
        <div
            id="card"
            class="[backface-visibility:hidden] w-4/6 h-4/6 rounded-2xl shadow-2xl flex flex-col items-center justify-center backdrop-blur-sm bg-white/10 z-50"
        >
            <div class="flex flex-col items-center justify-center z-[-1]">
                <h1
                    id="main-title"
                    class="text-transparent text-4xl md:text-5xl lg:text-7xl tracking-tight font-extrabold font-Montserrat bg-gradient-to-b from-gray-600 via-gray-800 to-black bg-clip-text drop-shadow-2xl z-[-1]"
                >
                    arbelaism<span id="name" class="visible z-0"
                        >aximiliano</span
                    >
                </h1>
                <h2
                    class="show text-transparent text-2xl md:text-3xl lg:text-4xl font-Mulish bg-gradient-to-b from-gray-600 via-gray-800 to-black bg-clip-text drop-shadow"
                >
                    Full Stack Developer.
                </h2>
            </div>
            <div class="absolute bottom-8 show-delay">
                <a href="/home">
                    <Sprite
                        name="mdi:arrow-right-thin-circle-outline"
                        class="fill-gray-900 hover:scale-90 hover:translate-y-1 transition-all"
                    />
                </a>
            </div>
        </div>
    </main>
</Layout>

<style>
    #wrapper {
        perspective: 1000px;
    }
</style>

<script>
    function jajjja() {
        const wrapper = document.getElementById("wrapper");
        const card = document.getElementById("card");

        if (!wrapper || !card) {
            return;
        }

        const { width, height } = wrapper.getBoundingClientRect();

        const halfWidth = width / 2;
        const halfHeight = height / 2;

        wrapper.addEventListener("mousemove", (event) => {
            const { pageX, pageY } = event;

            const rotationX = ((pageX - halfWidth) / halfWidth) * 8;
            const rotationY = ((pageY - halfHeight) / halfHeight) * 8;

            card.style.transform = `rotateX(${rotationX}deg) rotateY(${rotationY}deg)`;
        });
    }

    jajjja();
</script>
