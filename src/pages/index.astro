---
import Layout from "../layouts/Layout.astro";
---

<Layout title="My Portfolio - arbelaism">
    <main>
        <h1 class="text-white">Arbelais <span class="text-gradient">Maximiliano</span></h1>
    </main>
</Layout>

<style>
    main {
        margin: auto;
        padding: 1.5rem;
        max-width: 60ch;
    }
    h1 {
        font-size: 6rem;
        font-weight: 800;
        margin: 0;
    }
    .text-gradient {
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }
</style>
