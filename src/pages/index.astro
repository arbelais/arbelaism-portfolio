---
import Layout from "layouts/Layout.astro";
---

<Layout title="My Portfolio - arbelaism">
    <main
        id="wrapper"
        class="w-full h-screen flex items-center justify-center relative z-20"
    >
        <div
            id="card"
            class="[backface-visibility:hidden] md:w-4/6 h-4/6 md:px-10 rounded-2xl shadow-2xl flex flex-col items-center justify-center backdrop-blur-sm bg-white/10 z-50"
        >
            <div class="flex flex-col items-center justify-center z-[-1]">
                <h1
                    id="main-title"
                    class="text-transparent text-4xl md:text-5xl lg:text-6xl 2xl:text-7xl tracking-tight font-extrabold font-Montserrat bg-gradient-to-b from-gray-600 via-gray-800 to-black bg-clip-text drop-shadow-2xl z-[-1]"
                >
                    arbelaism<span id="name" class="visible z-0"
                        >aximiliano</span
                    >
                </h1>
                <h2
                    class="show text-transparent text-xl md:text-2xl lg:text-3xl 2xl:text-5xl font-Mulish bg-gradient-to-b from-gray-600 via-gray-800 to-black bg-clip-text drop-shadow"
                >
                    Full Stack Developer.
                </h2>
            </div>
            <div class="absolute bottom-8 show-delay">
                <a href="/home">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        class="w-12 h-12 2xl:w-16 2xl:h-16 text-gray-900 hover:text-black hover:scale-95 transition-all"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M12.75 15l3-3m0 0l-3-3m3 3h-7.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                        ></path>
                    </svg>
                </a>
            </div>
        </div>
    </main>
</Layout>

<style>
    #wrapper {
        perspective: 1000px;
    }
</style>

<script>
    function jajjja() {
        const wrapper = document.getElementById("wrapper");
        const card = document.getElementById("card");

        if (!wrapper || !card) {
            return;
        }

        const { width, height } = wrapper.getBoundingClientRect();

        const halfWidth = width / 2;
        const halfHeight = height / 2;

        wrapper.addEventListener("mousemove", (event) => {
            const { pageX, pageY } = event;

            const rotationX = ((pageX - halfWidth) / halfWidth) * 10;
            const rotationY = ((pageY - halfHeight) / halfHeight) * 10;

            card.style.transform = `rotateX(${rotationX}deg) rotateY(${rotationY}deg)`;
        });
    }

    jajjja();
</script>
