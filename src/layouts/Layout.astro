---
import "styles/globals.css";
import { Sprite } from "astro-icon";

// bg-[radial-gradient(ellipse_at_top_left,_var(--tw-gradient-stops))] from-indigo-900 via-zinc-100 to-orange-900
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body class="w-full h-screen font-Mulish">
        <Sprite.Provider>
            <slot />
        </Sprite.Provider>
    </body>
</html>
