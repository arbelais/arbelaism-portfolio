---
import "styles/globals.css";
import Navbar from "components/Navbar.astro";

// bg-[radial-gradient(ellipse_at_top_left,_var(--tw-gradient-stops))] from-indigo-900 via-zinc-100 to-orange-900
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body class="bg-zinc-200 dark:bg-zinc-900 flex items-center justify-center">
        <Navbar />
        <main class="container mx-auto font-Mulish transition-all scroll-snap">
            <slot />
        </main>
    </body>
</html>

<style>
    .scroll-snap {
        max-height: 100vh;
        overflow-y: scroll;
        scroll-snap-type: y mandatory;
        scrollbar-width: none;
    }

    .scroll-snap::-webkit-scrollbar {
        display: none;
    }
</style>
