---
import "styles/globals.css";

// bg-[radial-gradient(ellipse_at_top_left,_var(--tw-gradient-stops))] from-indigo-900 via-zinc-100 to-orange-900
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body
        class="bg-zinc-200 dark:bg-zinc-900 w-full h-screen font-Mulish flex flex-col items-center transition-all"
    >
        <slot />
    </body>
</html>
<script>
    window.addEventListener("scroll", (e) => {
        let scrolled = window.pageYOffset;
        setTimeout(() => {
            if (scrolled == window.pageYOffset) {
                if (scrolled % window.innerHeight >= window.innerHeight / 4) {
                    window.scrollBy(
                        0,
                        window.innerHeight - (scrolled % window.innerHeight)
                    );
                } else {
                    window.scrollBy(0, -(scrolled % window.innerHeight));
                }
            }
        }, 100);
    });
</script>
